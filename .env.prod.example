# Production Environment Configuration
# ⚠️ NEVER commit this file with real values!
# Copy to .env.prod and fill with production credentials

NODE_ENV=production
PORT=3000

# PostgreSQL Database
# ⚠️ CRITICAL: Change these credentials before production deployment
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-postgres-password-min-32-chars-here
POSTGRES_DB=ems
DATABASE_URL=postgres://postgres:your-strong-postgres-password-min-32-chars-here@db:5432/ems

# JWT Configuration
# ⚠️ Generate strong secrets: openssl rand -base64 64
JWT_ACCESS_SECRET=your-production-jwt-access-secret-here-min-64-chars
JWT_REFRESH_SECRET=your-production-jwt-refresh-secret-here-min-64-chars
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# Legacy (keep for backward compatibility)
JWT_SECRET=your-production-jwt-secret-here-min-64-chars
JWT_EXPIRES_IN=900s

# Auth Cookie Configuration
AUTH_COOKIE_NAME=refresh_token
AUTH_COOKIE_DOMAIN=yourdomain.com
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_SAMESITE=strict

# CORS Configuration
API_CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

RUN_MIGRATIONS=false
RUN_SEEDERS=false

# Email Configuration (SMTP)
EMAIL_PROVIDER=smtp
EMAIL_ENABLED=true
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@yourdomain.com
SMTP_PASSWORD=your-production-smtp-password-here
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Your Event System

# Cloudflare R2 Storage
# ⚠️ CRITICAL: Generate new credentials in Cloudflare Dashboard
R2_ACCOUNT_ID=your-production-r2-account-id
R2_ACCESS_KEY_ID=your-production-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-production-r2-secret-access-key
R2_BUCKET_NAME=your-production-bucket-name
R2_PUBLIC_URL=https://your-production-bucket.r2.dev

# Optional: Monitoring & Logging
# SENTRY_DSN=https://your-sentry-dsn-here
# LOG_LEVEL=info
