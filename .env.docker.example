NODE_ENV=development
PORT=3000
DATABASE_URL=postgres://postgres:postgres@ems_db:5432/ems

# JWT Configuration
JWT_ACCESS_SECRET=devsecret_access_please_change
JWT_REFRESH_SECRET=devsecret_refresh_please_change
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# Legacy (keep for backward compatibility)
JWT_SECRET=devsecret_please_change
JWT_EXPIRES_IN=900s

# Auth Cookie Configuration
AUTH_COOKIE_NAME=refresh_token
AUTH_COOKIE_DOMAIN=
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax

# CORS Configuration
API_CORS_ORIGIN=http://localhost:5173,http://localhost:3000

RUN_MIGRATIONS=true
RUN_SEEDERS=true

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres  
POSTGRES_DB=ems


# Configuration Email
EMAIL_PROVIDER=smtp
EMAIL_ENABLED=true
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=EMS Attendee System


# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-bucket.r2.dev