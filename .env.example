NODE_ENV=development
PORT=3000
DATABASE_URL=postgres://postgres:postgres@ems_db:5432/ems

# JWT Configuration
JWT_ACCESS_SECRET=devsecret_access_please_change
JWT_REFRESH_SECRET=devsecret_refresh_please_change
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# Legacy (keep for backward compatibility)
